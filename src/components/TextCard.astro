---
export interface Props {
    title: string;
    isDesktopOnly?: boolean;
}

const { title, isDesktopOnly = false } = Astro.props;
---

<div class={`text-card ${isDesktopOnly && 'desktop-only'}`}>
    {title && (
        <div class="header">
            {title}
        </div>
    )}
    <div class="text">
        <slot />
    </div>
</div>
<style>
    .text-card {
        line-height: 1.6;
        margin: 1rem 0;
        border: 1px solid rgba(var(--accent), 25%);
        background-color: white;
        padding: 1rem;
        border-radius: 0.4rem;
    }

    .text :global(code) {
        font-size: 0.875em;
        font-weight: bold;
        background: rgba(var(--accent), 12%);
        color: rgb(var(--accent));
        border-radius: 4px;
        padding: 0.3em 0.45em;
    }

    .header {
        margin-bottom: 0.3rem;
        color: rgb(var(--accent));
        font-weight: bold;
    }

    @media (max-width: 800px) {
        .desktop-only {
            display: none;
        }
    }
</style>
